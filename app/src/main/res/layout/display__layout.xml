<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/display_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >


        <TextView
            android:id="@+id/textView_welcomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Welcome"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_calcRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate My Risk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#d3d3d3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_covidStatTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Regional Covid-19 Stats"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textView_citationCovid19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data: COVID-19 Dashboard by the Center for Systems Science and Engineering (CSSE) at Johns Hopkins Universityâ€ Github, https://github.com/CSSEGISandData/COVID-19a"
                android:textSize="8sp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/textView_displayCases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:text="Confirmed Cases:" />

            <TextView
                android:id="@+id/textView_displayPopulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Population of County:" />

            <TextView
                android:id="@+id/textView_displayCoefficient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Infected versus Population Coefficient:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#d3d3d3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_generalStatTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="General Stats"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView_displayAirQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Air Quality: " />

            <TextView
                android:id="@+id/textView_displayTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Temperature (F): " />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#d3d3d3"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView_infectionRiskTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="0dp"
                    android:textSize="15sp"
                    android:text="Infection Probability Assessment:"
                    android:layout_marginStart="0dp" />

                <TextView
                    android:id="@+id/textView_infectionRiskDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="High"
                    android:padding="3dp"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView_riskOfDeathTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="0dp"
                    android:textSize="15sp"
                    android:text="Risk Factor of Mortality Assessment:" />

                <TextView
                    android:id="@+id/textView_riskOfDeathDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="High"
                    android:padding="3dp"
                    android:visibility="invisible" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Return to Main Menu" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">


            <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView_scaleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Scale"
                    android:textSize="22sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/textView_scale1Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:background="#0000FF"
                    android:textColor="#FFFFFF"
                    android:text="Highly Unlikely"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textView_scale2Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="#008000"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Unlikely"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView_scale3Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:background="#FFFF00"
                    android:textColor="#000"
                    android:text="Possible"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textView_scale4Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:background="#FFA500"
                    android:textColor="#FFFFFF"
                    android:text="Likely"
                    android:textSize="10sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView_scale5Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:background="#FF0000"
                    android:textColor="#FFFFFF"
                    android:text="Very Likely"
                    android:textSize="10sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView_scale6Display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:background="#9932CC"
                    android:textColor="#FFFFFF"
                    android:text="Hazardous"
                    android:textSize="10sp"
                    android:gravity="center" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_moreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="More Information"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>